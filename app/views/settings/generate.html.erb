<h1>
	Generate Config-File
	<small>
		<%= link_to ' | or upload configuration', new_setting_path %>
	</small>
</h1>

<form action="<%= generate_config_file_path %>" methdod="post" id="createConfigForm">
	<h2 class="form-group-heading">General</h2>

	<h3 class="form-group-sub-heading">Information</h3>

	<div class="form-group">
		<label for="general_title">Configuration Title</label>
		<input type="text" name="general_title" id="general_title" placeholder="Type in configuration's title" class="form-control">
	</div>

	<div class="form-group">
		<label for="description">Description</label>
		<textarea class ="form-control" name="description" id="description" placeholder="Type in configuration's description"></textarea>
	</div>

	<div class="form-group">
		<label for="title">Experiment's Title</label>
		<input class ="form-control" type="text" name="title" id="title" placeholder="Type in experiment's title/topic">
	</div>

	<div class="form-group">
		<label for="env">ENV-Variables</label>
		<input class ="form-control" type="text" name="env" id="env" placeholder="Type in experiment's required environment variables">
	</div>

	<div class="form-group">
		<label for="path">Root Directory</label>
		<input class ="form-control" type="text" name="path" id="path" placeholder="Type in experiment's root directory">
	</div>

	<div class="form-group">
		<label for="path">Command</label>
		<input class ="form-control" type="text" name="path" id="path" placeholder="Type in command, which will be executed for starting the experiment, for example 'python test.py'">
	</div>

	<h3 class="form-group-sub-heading">Parameters</h3>

	<div class="form-group">
		<span id="params_fields"></span>
		<button class="btn btn-primary"type="button" class="add_field_button" id="add_param_field_button">Add parameter</button>
	</div>

	<h2 class="form-group-heading">Export</h2>

	<div id="export_fields">
		<div class="form-group">
			<label for="csvFilename">CSV-Filename</label>
			<input class="form-control" id="csvFilename" type="text" name="csvFilename" placeholder="Type in filename of csv export file">
		</div>

		<div class="form-group">
			<label for="csvFields">CSV-Fields</label>
			<input class="form-control" id="csvFields" type="text" name="csvFields" placeholder="Type in csv fields (table columns, comma seperated), such as 'id, firstname, lastname, street, city'">
		</div>
	</div>

	<input type="button" class="btn btn-primary add_field_button toggle_fields_button" id="export_fields_button" value="Remove CSV-Export" />

	<h2 class="form-group-heading">Termination Constraints</h2>

	<h3 class="form-group-sub-heading">Timeout Constraints</h3>

	<div class="form-group" style="margin-top: 20px;">
		<label for="defaultTimeout">Default Timeout</label>
		<input class="form-control" id="defaultTimeout" type="text" name="defaultTimeout" placeholder="Type in time in seconds until when a single instance of a experiment series has to be terminated">
	</div>

	<div class="form-group">	
		<label for="outputPattern">Status Message Pattern</label>
		<input class="form-control" id="outputPattern" type="text" name="outputPattern" placeholder="Type in alorithm's status message pattern, such as 'Algorithm works fine!'">
	</div>

	<div class="form-group">
		<label for="maxTimeSinceLastStatusMsg">Status Message dependent Timout</label>
		<input class="form-control" id="maxTimeSinceLastStatusMsg" type="text" name="maxTimeSinceLastStatusMsg" placeholder="Type in timespan in seconds in which an algorithm has to send defined status message again to be called alive">
	</div>

	<h3 class="form-group-sub-heading">Performance Constraints</h3>

	<div class="form-group">	
		<label for="errorPattern">Loss Function Pattern</label>
		<input class="form-control" id="errorPattern" type="text" name="errorPattern" placeholder="Type in alorithm's loss function pattern, such as 'Loss function: '">
	</div>

	<div class="form-group">	
		<label for="minLossFunctionImprovementSinceLastIteration">Loss function improvement threshhold</label>
		<input class="form-control" id="minLossFunctionImprovementSinceLastIteration" type="text" name="minLossFunctionImprovementSinceLastIteration" placeholder="Type in minimal decrease of loss function compared to last iteration">
	</div>

	<div class="form-group">	
		<label for="accuracyPattern">Accuracy Function Pattern</label>
		<input class="form-control" id="accuracyPattern" type="text" name="accuracyPattern" placeholder="Type in alorithm's accuracy function pattern, such as 'Accuracy function: '">
	</div>

	<div class="form-group">	
		<label for="minAccuracyFunctionImprovementSinceLastIteration">Accuracy function improvement threshhold</label>
		<input class="form-control" id="minAccuracyFunctionImprovementSinceLastIteration" type="text" name="minAccuracyFunctionImprovementSinceLastIteration" placeholder="Type in minimal increase of accuracy function compared to last iteration">
	</div>

	<h2 class="form-group-heading">Notifiers</h2>

	<div id="notifiers_fields">
		<h3 class="form-group-sub-heading">Slack</h3>

		<div class="form-group">
			<label for="webhook_url">Webhook-URL</label>
			<input class="form-control" id="webhook_url" type="text" name="webhook_url" placeholder="Paste in your personal slack webhook">
		</div>

		<div class="form-group">
			<label for="icon">Bot-Chat-Icon</label>
			<input class="form-control" id="icon" type="text" name="icon" placeholder="Such as ':golf:'">
		</div>

		<div class="form-group">
			<label for="bot_name">Bot-Chat-Name</label>
			<input class="form-control" id="bot_name" type="text" name="bot_name" placeholder="Type in bot's chat name">
		</div>

		<h3 class="form-group-sub-heading">Telegram</h3>

		<div class="form-group">
			<label for="token">Token</label>
			<input class="form-control" id="token" type="text" name="token" placeholder="Paste in your generated token for your created bot">
		</div>

		<div class="form-group">
			<label for="chat_id">Chat ID</label>
			<input class="form-control" id="chat_id" type="text" name="chat_id" placeholder="Paste in your telegram's chat id">
		</div>

		<h3 class="form-group-sub-heading">Mail</h3>

		<div class="form-group">
			<label for="server">Server</label>
			<input class="form-control" id="server" type="text" name="server" placeholder="Type in mail server, such as 'smtp.gmail.com'">
		</div>

		<div class="form-group">
			<label for="user">User</label>
			<input class="form-control" id="user" type="text" name="user" placeholder="Type in your mail server's username">
		</div>

		<div class="form-group">
			<label for="password">Password</label>
			<input class="form-control" id="password" type="password" name="password" placeholder="Type in your password related to given username">
		</div>
	</div>

	<input type="button" class="btn btn-primary add_field_button toggle_fields_button" id="notifiers_fields_button" value="Use default notifier settings" />
	<hr>
	<input class="btn btn-primary" type="submit" value="Generate Config-JSON Files" />
</form>
<p>
<%= link_to 'Back', settings_path %>
</p>