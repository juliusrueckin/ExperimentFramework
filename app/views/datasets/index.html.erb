<p id="notice"><%= notice %></p>

<h2>Datasets</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>File path</th>
      <th>File size</th>
      <th>Dimensions</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @datasets.each do |dataset| %>
      <tr>
        <td><%= dataset.title %></td>
        <td><%= dataset.description %></td>
        <td><%= link_to '... ' + dataset.file_path.split(//).last(60).join, download_dataset_path(dataset.id) %></td>
        <td><%= dataset.file_size %></td>
        <td><%= dataset.dimensions %></td>
        <td><%= dataset.size %></td>
        <td><%= link_to 'Show', dataset %></td>
        <td><%= link_to 'Edit', edit_dataset_path(dataset) %></td>
        <td><%= link_to 'Destroy', dataset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'New Dataset', new_dataset_path %>
</p>