<%= form_with(model: experiment, local: true) do |form| %>
  <% if experiment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(experiment.errors.count, "error") %> prohibited this experiment from being saved:</h2>

      <ul>
      <% experiment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :experiment_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :experiment_description %>
  </div>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.select :project_id, options_from_collection_for_select(@projects, "id", "title"), include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :algorithm_id %>
    <%= form.select :algorithm_id, options_from_collection_for_select(@algorithms, "id", "title"), include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :setting_id %>
    <%= form.select :setting_id, options_from_collection_for_select(@settings, "id", "title"), include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :dataset_id %>
    <%= form.select :dataset_id, options_from_collection_for_select(@datasets, "id", "title"), include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
